             d:DesignHeight="900" d:DesignWidth="1280">
    <Grid Margin="5">
        <Grid.Resources>
            <Style x:Key="multiRowLabelStyle" TargetType="{x:Type s:DefaultTickLabel}">
                <Setter Property="HorizontalAnchorPoint" Value="Right"/>
                <Setter Property="ContentTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <Grid>
                                <Grid.Resources>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </Grid.Resources>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="{Binding AxisLabels[0].Label}" Foreground="{Binding AxisLabels[0].Color}"/>
                                <TextBlock Text="{Binding AxisLabels[1].Label}" Foreground="{Binding AxisLabels[1].Color}" Grid.Row="1"/>
                                <TextBlock Text="{Binding AxisLabels[2].Label}" Foreground="{Binding AxisLabels[2].Color}" Grid.Row="2"/>
                                <TextBlock Text="{Binding AxisLabels[3].Label}" Foreground="{Binding AxisLabels[3].Color}" Grid.Row="3"/>
                                <TextBlock Text="{Binding AxisLabels[4].Label}" Foreground="{Binding AxisLabels[4].Color}" Grid.Row="4"/>
                            </Grid>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!--PATTERN GRP #1-->
        <s:SciChartSurface Grid.Row="0" Margin="0" Padding="43,5,0,5" RenderableSeries="{s:SeriesBinding Group1Series}" x:Name="chartGrp1">
            <dxmvvm:Interaction.Behaviors>
                <dxmvvm:EventToCommand EventName="PreviewMouseDown" Command="{Binding OpenEditorDlgCommand}" CommandParameter="1"/>
            </dxmvvm:Interaction.Behaviors>
            <s:SciChartSurface.XAxis>
                <s:NumericAxis 
                               Visibility="Collapsed"
                               VisibleRange="0,15"
                               AutoTicks="True"
                               MaxAutoTicks="15"                               
                               DrawMajorBands="False"                               
                               DrawMajorGridLines="True"
                               DrawMinorGridLines="False"
                               
                               FontFamily="Century Gothic"
                               FontSize="9"
                               TitleFontSize="9"
                               TitleFontWeight="Normal"
                               BorderThickness="0,1,0,0"
                               BorderBrush="Gray"                               
                               />
            </s:SciChartSurface.XAxis>
            <s:SciChartSurface.YAxes>
                <s:NumericAxis Id="y1"                               
                               AxisAlignment="Left"                               
                               VisibleRange="0,400"
                               Visibility="Visible"
                               AutoTicks="False"
                               MajorDelta="400"
                               MinorDelta="40"
                               DrawMajorBands="False"                               
                               DrawMajorGridLines="True"
                               DrawMinorGridLines="True"
                               DrawMinorTicks="True"    
                               
                               Margin="5,0,0,0"
                               BorderThickness="0,0,1,0"
                               BorderBrush="Gray"
                               GrowBy="0.1, 0.1"                                     
                               FontFamily="Century Gothic"
                               FontSize="9"
                               TitleFontSize="9"
                               TitleFontWeight="Normal"                                 
                               TextFormatting="0.0"
                               TickTextBrush="Red"      
                               TickLabelStyle="{StaticResource multiRowLabelStyle}"
                               x:Name="yaxis11"
                               />                
                <s:NumericAxis Id="y2" 
                               AxisAlignment="Left"                               
                               VisibleRange="-150,150"
                               Visibility="Collapsed"
                               AutoTicks="False"
                               MajorDelta="300"
                               MinorDelta="30"
                               TickTextBrush="Lime"                                
                               x:Name="yaxis12"
                               />
                <s:NumericAxis Id="y3"      
                               AxisAlignment="Left"
                               VisibleRange="0,60"
                               Visibility="Collapsed"                   
                               AutoTicks="False"
                               MajorDelta="60"
                               MinorDelta="6"
                               TickTextBrush="Aqua"
                               x:Name="yaxis13"
                               />
                <s:NumericAxis Id="y4"      
                               AxisAlignment="Left"
                               VisibleRange="0,60"
                               Visibility="Collapsed"      
                               AutoTicks="False"
                               MajorDelta="60"
                               MinorDelta="6"
                               TickTextBrush="Yellow"
                               x:Name="yaxis14"
                               />

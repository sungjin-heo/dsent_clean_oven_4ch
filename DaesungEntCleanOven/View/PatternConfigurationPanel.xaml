                               AxisAlignment="Left"
                               VisibleRange="0,600"                               
                               Visibility="Collapsed"                        
                               AutoTicks="False"
                               MajorDelta="600"
                               MinorDelta="60"
                               TickTextBrush="Magenta"
                               x:Name="yaxis15"
                               />

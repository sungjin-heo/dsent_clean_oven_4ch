            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="그래프 저장 주기 (S)" HorizontalAlignment="Right" TextDecorations="Underline"/>
        <TextBox Grid.Row="0" Grid.Column="2" x:Name="tboxSaveInterval" HorizontalContentAlignment="Center" FontWeight="Bold"/>

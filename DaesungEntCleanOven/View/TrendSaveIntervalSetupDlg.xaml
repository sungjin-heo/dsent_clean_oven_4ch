        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" SnapsToDevicePixels="True" FontFamily="Century Gothic" ResizeMode="NoResize"        

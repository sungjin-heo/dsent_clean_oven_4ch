                <TextBox Grid.Row="0" Grid.Column="15" FontWeight="Bold" Text="{Binding SelectedSegmentGrp[14].Name, Mode=OneWay}" Style="{StaticResource CaptionTextBox}" Background="Green"/>
                <TextBox Grid.Row="1" Grid.Column="15" FontWeight="Bold" Text="{Binding SelectedSegmentGrp[14].Temperature, Mode=TwoWay, StringFormat=F1}">
                    <dxmvvm:Interaction.Behaviors>
                        <u:TextBoxInputDoneBehavior/>
                    </dxmvvm:Interaction.Behaviors>
                </TextBox>
                <TextBox Grid.Row="2" Grid.Column="15" FontWeight="Bold" Text="{Binding SelectedSegmentGrp[14].DifferencePressureChamber, Mode=TwoWay, StringFormat=F1}">
                    <dxmvvm:Interaction.Behaviors>
                        <u:TextBoxInputDoneBehavior/>
                    </dxmvvm:Interaction.Behaviors>
                </TextBox>
                <TextBox Grid.Row="3" Grid.Column="15" FontWeight="Bold" Text="{Binding SelectedSegmentGrp[14].MotorChamber, Mode=TwoWay, StringFormat=F1}">
                    <dxmvvm:Interaction.Behaviors>
                        <u:TextBoxInputDoneBehavior/>
                    </dxmvvm:Interaction.Behaviors>
                </TextBox>
                <!--<TextBox Grid.Row="4" Grid.Column="15" FontWeight="Bold" Text="{Binding SelectedSegmentGrp[14].MotorCooling, Mode=TwoWay, StringFormat=F1}">
                    <dxmvvm:Interaction.Behaviors>
                        <u:TextBoxInputDoneBehavior/>
                    </dxmvvm:Interaction.Behaviors>
                </TextBox>-->
                <TextBox Grid.Row="5" Grid.Column="15" FontWeight="Bold" Text="{Binding SelectedSegmentGrp[14].MFC, Mode=TwoWay, StringFormat=F1}">
                    <dxmvvm:Interaction.Behaviors>
                        <u:TextBoxInputDoneBehavior/>
                    </dxmvvm:Interaction.Behaviors>
                </TextBox>
                <TextBox Grid.Row="6" Grid.Column="15" FontWeight="Bold" Text="{Binding SelectedSegmentGrp[14].Duration, Mode=TwoWay, StringFormat=F2}"
                         TextChanged="SegmentTimeTextBox_TextChanged">
                    <dxmvvm:Interaction.Behaviors>
                        <u:TextBoxInputDoneBehavior/>
                    </dxmvvm:Interaction.Behaviors>
                </TextBox>
                <TextBox Grid.Row="7" Grid.Column="15" Text="{Binding SelectedSegmentGrp[14].FormattedTimeSignalGrp1, Mode=OneWay}" Background="Black" Margin="1,2" Foreground="Gold"  IsTabStop="False">
                    <dxmvvm:Interaction.Behaviors>
                        <dxmvvm:EventToCommand EventName="PreviewMouseLeftButtonDown" Command="{Binding OpenTimeSignalSetupDlgCommand}" CommandParameter="{Binding SelectedSegmentGrp[14]}"/>
                    </dxmvvm:Interaction.Behaviors>
                </TextBox>
                <TextBox Grid.Row="8" Grid.Column="15" Text="{Binding SelectedSegmentGrp[14].FormattedTimeSignalGrp2, Mode=OneWay}" Background="Black" Margin="1,2" Foreground="Gold" IsTabStop="False">
                    <dxmvvm:Interaction.Behaviors>
                        <dxmvvm:EventToCommand EventName="PreviewMouseLeftButtonDown" Command="{Binding OpenTimeSignalSetupDlgCommand}" CommandParameter="{Binding SelectedSegmentGrp[14]}"/>
                    </dxmvvm:Interaction.Behaviors>
                </TextBox>
            </Grid>
        </Grid>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Left">
            <dx:SimpleButton Content="세그먼트 #01 ~ #15" Width="160" Command="{Binding SelectSegmentGrp1Command}" Glyph="{dx:DXImage Image=LessThan_16x16.png}"/>
            <dx:SimpleButton Content="세그먼트 #15 ~ #30" Width="160" Command="{Binding SelectSegmentGrp2Command}" Glyph="{dx:DXImage Image=GreaterThan_16x16.png}" GlyphAlignment="Right"/>            
        </StackPanel>
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <dx:SimpleButton Content="초기화" Width="140" Glyph="{dx:DXImage Image=Reset2_16x16.png}" Command="{Binding ResetCommand}"/>
            <dx:SimpleButton Content="저장" Width="140" Glyph="{dx:DXImage Image=Save_16x16.png}" Click="SaveButton_Click"/>
            <dx:SimpleButton Content="취소" Width="140" Glyph="{dx:DXImage Image=Cancel_16x16.png}" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
